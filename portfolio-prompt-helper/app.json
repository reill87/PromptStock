{
  "expo": {
    "name": "PromptStock",
    "slug": "promptstock",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "promptstock",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.promptstock.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": [],
        "NSCameraUsageDescription": "프롬프트 생성을 위해 이미지를 촬영합니다.",
        "NSPhotoLibraryUsageDescription": "프롬프트 생성을 위해 갤러리 이미지를 선택합니다.",
        "NSPhotoLibraryAddUsageDescription": "분석한 이미지를 저장하기 위해 갤러리 접근이 필요합니다.",
        "PHPhotoLibraryPreventAutomaticLimitedAccessAlert": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.promptstock.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "프롬프트 생성을 위해 갤러리 이미지를 선택합니다.",
          "cameraPermission": "프롬프트 생성을 위해 이미지를 촬영합니다."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.5"
          },
          "android": {
            "minSdkVersion": 24,
            "compileSdkVersion": 34
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "promptstock"
      }
    }
  }
}
